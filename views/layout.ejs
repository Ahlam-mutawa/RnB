<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <title>Rent and Buy</title>
</head>

<body>
    <style>
        section {
            padding: 60px 0;
        }
    </style>
    <!-- navbar -->
    <nav class="navbar navbar-expand-md navbar-light">
        <div class="container-xxl">
            <a href="/" class="navbar-brand">
                <a class="navbar-brand" href="#">
                    <img src="https://i.ibb.co/37XFRNz/logo.jpg" width="80" height="70" alt="logo">
                    RnB Website
                </a>
                
                
            </a>

            <!-- toggle button for mobile nav -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#main-nav"
                aria-controls="main-nav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end align-center" id="main-nav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>

                    <% if (locals.user) { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/user/myProfile">My profile</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/auth/signout">sign out</a>
                        </li>
                        
                                <% } else { %>
                                    <li class="nav-item">
                                        <a class="nav-link" href="/auth/signin">sign in</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="/auth/signup">sign up</a>
                                    </li>
                                    <% } %>

                                        <li class="nav-item d-md-none">
                                            <a class="nav-link" href="/item/index">Rent </a>
                                        </li>
                                        <li class="nav-item ms-2 d-none d-md-inline">
                                            <a class="btn btn-secondary" href="/item/index">Rent Now</a>
                                        </li>
                </ul>
            </div>



        </div>
    </nav>


    <% if (locals.messages) { %>
        <ul class="messages">
            <% Object.keys(messages).forEach((key)=> { %> <% messages[key].forEach((message)=> { %>
                    <li class="<%= key %>">
                        <%= message %>
                    </li>
                    <% }) %>
                        <% }) %>
        </ul>
        <% } %>
           
            <% if (messages.error) { %>
                <p>
                    <%= messages.error %>
                </p>
                <% } %>
                    <br>
                    <%- body %>

                        <script
  rc="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
  crossorigin="anonymous">
</script>
</body>

</html>